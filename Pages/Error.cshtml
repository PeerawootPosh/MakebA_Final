@page
@model MakebA_Final.Pages.ErrorModel
@{
    ViewData["Title"] = "Error";
}

<div class="container text-center mt-5">
    <h2 class="text-danger">An Error Occurred</h2>
    <p class="lead">Sorry, an unexpected error occurred. Please try again later.</p>

    @* Display the Request ID if available for troubleshooting *@
    @if (Model.ShowRequestId)
    {
        <p>Error ID: <strong>@Model.RequestId</strong></p>
    }

    <a href="/" class="btn btn-primary mt-3">Go to Home Page</a>
</div>
