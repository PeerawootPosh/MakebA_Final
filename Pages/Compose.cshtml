@page
@model MakebA_Final.Pages.ComposeModel
@{
    ViewData["Title"] = "Compose Email";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MakebA_Final</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f8;
        }

        .sidebar {
            background-color: #2b2f3a;
            color: #fff;
            padding: 20px;
            height: 100vh;
        }

            .sidebar a {
                color: #fff;
                display: block;
                padding: 10px;
                margin-bottom: 10px;
                text-decoration: none;
                font-weight: bold;
                border-radius: 5px;
                background-color: #3a3f4b;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <h4>Quick Actions</h4>
                    <a href="/Compose">✉️ Compose</a>
                    <a href="/Inbox">📥 Inbox</a>
                    <a href="/Sent">🚀 Sent Emails</a>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content">
                <h2>Compose Email</h2>
                <form id="composeForm" onsubmit="showAlert(event)">
                    <div class="mb-3">
                        <label for="to" class="form-label">To</label>
                        <input type="email" class="form-control" id="to" placeholder="Recipient's email" required>
                    </div>
                    <div class="mb-3">
                        <label for="subject" class="form-label">Subject</label>
                        <input type="text" class="form-control" id="subject" placeholder="Subject" required>
                    </div>
                    <div class="mb-3">
                        <label for="body" class="form-label">Message</label>
                        <textarea class="form-control" id="body" rows="5" placeholder="Write your message..." required></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Send</button>
                </form>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function showAlert(event) {
            event.preventDefault(); // ป้องกันการ submit ฟอร์มจริง

            // โค้ดแสดงการแจ้งเตือนเมื่อส่งเมลสำเร็จ
            alert("Your email has been sent successfully!");

            // เคลียร์ข้อมูลฟอร์มหลังจากแสดงการแจ้งเตือน
            document.getElementById("composeForm").reset();
        }
    </script>
</body>
</html>
