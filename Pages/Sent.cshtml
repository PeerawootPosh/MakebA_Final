@page
@model MakebA_Final.Pages.SentModel
@{
    ViewData["Title"] = "Sent Emails";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MakebA_Final</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f8;
        }

        .sidebar {
            background-color: #2b2f3a;
            color: #fff;
            padding: 20px;
            height: 100vh;
        }

            .sidebar a {
                color: #fff;
                display: block;
                padding: 10px;
                margin-bottom: 10px;
                text-decoration: none;
                font-weight: bold;
                border-radius: 5px;
                background-color: #3a3f4b;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content {
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
        }

        .email-list .email-item-sent {
            background-color: #d1e7dd; /* สีเขียวอ่อน */
            padding: 15px;
            border-radius: 5px;
            margin-bottom: 15px;
            border-left: 5px solid #0f5132; /* ขอบซ้ายสีเขียวเข้ม */
        }

            .email-list .email-item-sent:hover {
                background-color: #c7dfd4; /* สีเขียวอ่อนขึ้นเมื่อ hover */
            }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <h4>Quick Actions</h4>
                    <a href="/Compose">✉️ Compose</a>
                    <a href="/Inbox">📥 Inbox</a>
                    <a href="/Sent">🚀 Sent Emails</a>
                </div>
            </nav>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 content">
                <h2>Sent Emails</h2>
                <p>Here are your sent emails:</p>

                <div class="email-list mt-4">
                    @foreach (var mail in Model.SentMails)
                    {
                        <div class="email-item-sent">
                            <h5>Subject: @mail.Subject</h5>
                            <p><strong>To:</strong> @mail.Receiver</p>
                            <p><strong>Date:</strong> @mail.DateSent.ToString("MMMM dd, yyyy HH:mm")</p>
                            <p><strong>Preview:</strong> @mail.Preview</p>
                        </div>
                    }
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
