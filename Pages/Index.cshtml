@page
@model MakebA_Final.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - MakebA_Final</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        /* สไตล์พื้นหลังและการจัดวาง */
        body, html {
            height: 100%;
            margin: 0;
            font-family: Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            background: #1e1e2f;
            color: #ffffff;
        }

        .container-main {
            text-align: center;
            max-width: 600px;
            padding: 50px 30px;
            background-color: #333333;
            border-radius: 15px;
            box-shadow: 0px 4px 20px rgba(0, 0, 0, 0.5);
        }

        h1 {
            font-size: 3rem;
            font-weight: bold;
            color: #ffffff;
            margin-bottom: 20px;
        }

        p {
            font-size: 1.2rem;
            color: #d1d1d1;
            margin-bottom: 30px;
        }

        /* ปุ่ม */
        .btn-custom {
            font-size: 1.1rem;
            font-weight: bold;
            padding: 12px 30px;
            margin: 10px;
            border-radius: 30px;
            transition: all 0.3s ease;
        }

        .btn-register {
            background-color: #0d6efd;
            color: #ffffff;
            border: none;
        }

            .btn-register:hover {
                background-color: #0056b3;
                transform: scale(1.05);
                box-shadow: 0px 4px 15px rgba(13, 110, 253, 0.5);
            }

        .btn-login {
            background-color: #6c757d;
            color: #ffffff;
            border: none;
        }

            .btn-login:hover {
                background-color: #5a6268;
                transform: scale(1.05);
                box-shadow: 0px 4px 15px rgba(108, 117, 125, 0.5);
            }
    </style>
</head>
<body>
    <div class="container-main">
        <h1>Welcome to MakebA_Final</h1>
        <p>Join us today for a seamless experience.</p>

        <!-- ปุ่ม Register และ Login -->
        <div>
            <a href="/Register" class="btn btn-custom btn-register">Register</a>
            <a href="/Login" class="btn btn-custom btn-login">Login</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
