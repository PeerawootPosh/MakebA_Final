@page "{id:int}"
@model MakebA_Final.Pages.MailDetailModel
@{
    ViewData["Title"] = "Mail Detail";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MakebA_Final</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>@Model.MailDetail.Subject</h2>
        <p><strong>From:</strong> @Model.MailDetail.Sender</p>
        <p><strong>To:</strong> @Model.MailDetail.Receiver</p>
        <p><strong>Date Sent:</strong> @Model.MailDetail.DateSent.ToString("MMM dd, yyyy hh:mm tt")</p>
        <hr />
        <p>@Model.MailDetail.Content</p>

        <!-- ปุ่ม Reply ที่มีการเปลี่ยนสีเป็นสีเขียว -->
        <a asp-page="/Compose" asp-route-receiver="@Model.MailDetail.Sender" class="btn btn-success mt-3">Reply</a>

        <a asp-page="/Inbox" class="btn btn-light mt-3">Back to Inbox</a>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
