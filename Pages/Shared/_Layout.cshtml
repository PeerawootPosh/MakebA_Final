<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MakebA_Final</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f4f6f8;
        }

        .topbar {
            background-color: #2b2f3a;
            color: #fff;
            padding: 10px 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .topbar a {
                color: #fff;
                margin-right: 15px;
                text-decoration: none;
                font-weight: bold;
                transition: color 0.3s;
            }

                .topbar a:hover {
                    color: #cddc39;
                }

        .content {
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- ซ่อน Topbar เมื่ออยู่ในหน้า Home, Register, หรือ Login -->
    @if (ViewData["Title"]?.ToString() != "Home" && ViewData["Title"]?.ToString() != "Register" && ViewData["Title"]?.ToString() != "Login")
    {
        <nav class="topbar">
            <div>
                <a href="/" class="navbar-brand text-white">MakebA_Final</a>
            </div>
            <div class="d-flex align-items-center">
                @if (User.Identity.IsAuthenticated)
                {
                    <!-- เมนูสำหรับผู้ใช้ที่ล็อกอินแล้ว -->
                    <a href="/Inbox">📥 Inbox</a>
                    <a href="/Compose">✉️ Compose Email</a>
                    <a href="/Sent">🚀 Sent Emails</a>
                    <a href="/Profile">👤 Profile</a>
                }
                else
                {
                    <!-- เมนูสำหรับผู้ใช้ที่ยังไม่ได้ล็อกอิน -->
                    <a href="/Login" class="text-primary">🔐 Login</a>
                    <a href="/Register" class="text-primary">Register</a>
                }
            </div>
        </nav>
    }

    <!-- Main content -->
    <div class="content">
        @RenderBody()
    </div>

    <!-- Section Scripts -->
    @RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
